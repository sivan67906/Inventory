                                </td>
                            </tr>
                            <tr>
                                <td class="d-none">1</td>
                                <td>PRJ/GRN/20250111/543</td>
                                <td>PRJ/SO/20250112/006</td>
                                <td>PRJ/PO/20250112/006</td>
                                <td>RM 2,549.00</td>
                                <td>Created</td>
                                <td>
                                    <a asp-area="Inventory" asp-controller="GRN" asp-action="ViewGRNDetails">
